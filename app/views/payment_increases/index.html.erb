<%= render "layouts/user_header" %>
<div class="row">
  <br>
  <%= link_to 'Nuevo Aumento Salarial', new_payment_increase_path, class: "button right font-color" %>
  <%= link_to 'Menú Principal', root_path, class: "button left font-color" %>
  <hr/>

  <div class="columns">
    <p id="notice"><%= notice %></p>

    <h1>Aumentos realizados</h1>

    <table class="fill-spaces decorated1">
      <thead>
        <tr>
          <th>Porcentaje</th>
          <th>Frecuencia</th>
          <th>Fecha de creación</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @payment_increases.each do |payment_increase| %>
          <tr>
            <td><%= payment_increase.percentage %></td>
            <td><%= payment_increase.frequency %></td>
            <td><%= payment_increase.created_at.to_date %></td>
            <td><%= link_to 'Ver aumento', payment_increase, class: "link" %></td>
            <td><%= link_to 'Destruir aumento', payment_increase, method: :delete, data: { confirm: 'Se borrará permamentemente. Está seguro?' }, class: "link" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
