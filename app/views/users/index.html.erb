<%= render "layouts/user_header" %>
<div class="row">
  <br/>
  <%= link_to 'Ir al menú principal', root_path, class: "button left font-color" %>
  <%= link_to 'Ingresar nuevo trabajador', new_user_path, class: "button right font-color" %>
  <hr/>

  <div class="columns">
    <p id="notice"><%= notice %></p>

    <h1>Trabajadores ingresados</h1>

    <table class="fill-spaces decorated1">
      <thead>
        <tr>
          <th>Nombres</th>
          <th>Apellidos</th>
          <th>Cédula</th>
          <th>Teléfono</th>
          <th>Salario</th>
          <th>Puesto</th>
          <th>Fecha Contratación</th>
          <th>Fecha Despido</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.names %></td>
            <td><%= user.surnames %></td>
            <td><%= user.identifier %></td>
            <td><%= user.telephone %></td>
            <td><%= user.salary %></td>
            <td><%= user.position.name %></td>
            <td><%= user.admission.to_date %></td>
            <td><%= user.departure.to_date %></td>
            <td><%= link_to 'Perfil', user, class: "link" %></td>
            <td><%= link_to 'Actualizar', edit_user_path(user), class: "link" %></td>
            <td><%= link_to 'Borrar', user, method: :delete, data: { confirm: 'El usuario será borrado completamente. Está seguro?' }, class: "link" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>

